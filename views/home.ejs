    <% const BASE_PATH = "/image/shop"; %>  <% /* ÿ∫ŸäŸëÿ±Ÿáÿß ŸÑŸà ŸÅŸàŸÑÿØÿ± ŸÖÿÆÿ™ŸÑŸÅ */ %>

    <div class="galleryGrid">
      <% for(let i = 1; i <= 20; i++) { %>
        <button class="galleryItem" type="button" aria-label="Open shop photo <%= i %>">
          <img
            src="<%= BASE_PATH %>/<%= i %>.jpg"
            alt="Shop photo <%= i %>"
            loading="lazy"
            onerror="this.style.display='none'; this.parentElement.classList.add('img-fail');"
          >
        </button>
      <% } %>
    </div>
  </div>
</section>

<script>
(function(){
  const items = document.querySelectorAll(".galleryItem");
  if(!items.length) return;

  if(!("IntersectionObserver" in window)){
    items.forEach(el => el.classList.add("is-in"));
    return;
  }

  const io = new IntersectionObserver(entries=>{
    entries.forEach(e=>{
      if(e.isIntersecting){
        e.target.classList.add("is-in");
        io.unobserve(e.target);
      }
    });
  }, {threshold: 0.15});

  items.forEach(el => io.observe(el));
})();
</script>


